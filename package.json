    "bugs": {
        "url": "https://github.com/tests-always-included/metalsmith-relative-links/issues"
    },
    "homepage": "https://github.com/tests-always-included/metalsmith-relative-links#readme",
    "dependencies": {
        "debug": "^3.0.0",
        "metalsmith-plugin-kit": "^1.0.1"
    },
    "devDependencies": {
        "codecov": "^2.2.0",
        "eslint": "^4.0.0",
        "istanbul": "^0.4.5",
        "jasmine": "^2.6.0",
        "jasmine-test-helpers": "^1.2.3",
        "nodemon": "^1.11.0"
