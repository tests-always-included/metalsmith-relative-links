        "test": "istanbul cover jasmine && eslint lib spec && codecov",
        "watch": "nodemon --exec jasmine"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/tests-always-included/metalsmith-relative-links.git"
    },
